<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="connectFactory" class="org.base.dao.daoImplementation.ConnectFactory" init-method="init">
        <constructor-arg name="driver" value="${driver}"/>
        <constructor-arg name="url" value="${url}"/>
        <constructor-arg name="user" value="${user}"/>
        <constructor-arg name="password" value="${password}"/>
    </bean>

    <bean id="dao" class="org.base.dao.daoImplementation.ManagerDao">
        <constructor-arg name="factory" ref="connectFactory"/>
    </bean>

    <bean id="service" class="org.base.service.ServiceImplementation.ManagerService">
        <constructor-arg name="dao" ref="dao"/>
    </bean>

    <bean id="model" class="org.base.model.User"/>

    <bean id="dbProperties"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:postgre.properties"/>
    </bean>


</beans>